<%layout("layouts/boilerplate")-%>
    <div id="cluster-map"></div>
    <h2>All Campgrounds</h2>
  <%for(let camp of campgrounds){%>
  <div class="card mb-4">
    <div class="row">
      <div class="col-md-4">
        <%if(camp.images.length){%>
          <img class="img-fluid" src="<%=camp.images[0].url%>" alt="" />
        <%} else {%>
          <img class="img-fluid" src="https://images.unsplash.com/photo-1534880606858-29b0e8a24e8d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" alt="" />
        <%}%>   
      </div>
      <div class="col-md-8">
          <div class="card-body">
                <h5 class="card-title"><%=camp.title%></h3>
                <p class="card-text"><%=camp.description%></p>
                <p class="card-text"><Small class="muted"><%=camp.location%></Small></p>
                <form action="/campgrounds/<%=camp._id%>">
                <button class="btn btn-primary">View <%=camp.title%></button>
                </form>
            </div>
        </div>
    </div>
  </div>
  <%}%>
  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/clustterMap.js"></script>

