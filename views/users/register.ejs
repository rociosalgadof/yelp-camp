<%layout("layouts/boilerplate")-%>
<div class="container d-flex justify-content-center align-items-center mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img
          src="https://images.unsplash.com/photo-1618526640189-81726d5dd707?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="text-center">Register</h5>

          <form
            action="/register"
            method="post"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                autofocus
                required
                type="text"
                id="username"
                name="username"
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid username.</div>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                required
                type="email"
                id="email"
                name="email"
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid email.</div>
            </div>
            <div class="mb-3">
              <label for="username" class="form-label">Password</label>
              <input
                required
                type="password"
                id="password"
                name="password"
                class="form-control"
              />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please enter a valid password.</div>
            </div>
            <div class="mb-3">
              <button class="btn btn-info btn-block">Submitt</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
